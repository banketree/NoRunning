<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/modelbk"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="40sp"
            android:orientation="vertical" >
        </LinearLayout>
        
          <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip" >

                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/home_stats_run_symbol"
                    android:gravity="center_vertical"
                    android:text="总里程/Km"
                    android:drawablePadding="10sp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_meter"
                        android:layout_width="match_parent"
                        android:layout_height="40.0dip"
                        android:layout_marginLeft="20dip"
                        android:background="#ffffff"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="请输入总里程"
                        android:inputType="number"
                        android:maxLength="16"
                        android:maxLines="1"
                        android:paddingLeft="12.0dip"
                        android:text=""
                        android:textColor="#ff1d1d1d"
                        android:textColorHint="#ff666666"
                        android:textSize="16.0sp"
                        android:textStyle="bold" >
                    </EditText>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="1.0px"
                    android:layout_marginRight="1.0px"
                    android:background="#ffc0c3c4" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="10sp"
            android:orientation="vertical" >
        </LinearLayout>
          <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip" >

                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/home_stats_pace_symbol"
                    android:gravity="center_vertical"
                    android:text="总时间/分钟"
                    android:drawablePadding="10sp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_time"
                        android:layout_width="match_parent"
                        android:layout_height="40.0dip"
                        android:layout_marginLeft="10dip"
                        android:background="#ffffff"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="请输入总时间"
                        android:inputType="number"
                        android:maxLength="16"
                        android:maxLines="1"
                        android:paddingLeft="12.0dip"
                        android:text=""
                        android:textColor="#ff1d1d1d"
                        android:textColorHint="#ff666666"
                        android:textSize="16.0sp"
                        android:textStyle="bold" >
                    </EditText>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="1.0px"
                    android:layout_marginRight="1.0px"
                    android:background="#ffc0c3c4" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="10sp"
            android:orientation="vertical" >
        </LinearLayout>
         <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip" >

                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/home_stats_fuel_symbol"
                    android:gravity="center_vertical"
                    android:text="平均速率 m/s"
                    android:drawablePadding="10sp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_speedrate"
                        android:layout_width="match_parent"
                        android:layout_height="40.0dip"
                        android:layout_marginLeft="0dip"
                        android:background="#ffffff"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="请输入平均速率"
                        android:inputType="number"
                        android:maxLength="16"
                        android:maxLines="1"
                        android:paddingLeft="12.0dip"
                        android:text=""
                        android:textColor="#ff1d1d1d"
                        android:textColorHint="#ff666666"
                        android:textSize="16.0sp"
                        android:textStyle="bold" >
                    </EditText>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="1.0px"
                    android:layout_marginRight="1.0px"
                    android:background="#ffc0c3c4" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="10sp"
            android:orientation="vertical" >
        </LinearLayout>
<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip" >

                    <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/home_stats_calories_symbol"
                    android:drawablePadding="10sp"
                    android:gravity="center_vertical"
                    android:text="平均心率/次"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_heartrate"
                        android:layout_width="match_parent"
                        android:layout_height="40.0dip"
                        android:layout_marginLeft="13dip"
                        android:background="#ffffff"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="请输入平均心率"
                        android:inputType="number"
                        android:maxLength="16"
                        android:maxLines="1"
                        android:paddingLeft="12.0dip"
                        android:text=""
                        android:textColor="#ff1d1d1d"
                        android:textColorHint="#ff666666"
                        android:textSize="16.0sp"
                        android:textStyle="bold" >
                    </EditText>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="1.0px"
                    android:layout_marginRight="1.0px"
                    android:background="#ffc0c3c4" />
            </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true" >

            <Button
                android:id="@+id/btn_save"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="58dp"
                android:background="#FF0000"
                android:text="保存"
                android:textColor="@color/white" />
            
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>