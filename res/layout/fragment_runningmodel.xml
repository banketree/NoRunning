<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/modelbk"
    android:orientation="vertical" >

    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>


  

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dad6d5"
             >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="85dip"
                android:layout_height="40dip"
                android:layout_gravity="center"
                android:layout_marginLeft="5dip"
                android:background="@android:color/transparent"
                android:src="@drawable/clock3" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="85dip"
                android:layout_height="40dip"
                android:layout_marginLeft="0dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/alert3" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="85dip"
                android:layout_height="40dip"
                android:layout_marginLeft="0dip"
                 android:layout_gravity="center"
               
                android:src="@drawable/run3" />

          <ImageView
                android:id="@+id/imageView3"
                android:layout_width="85dip"
                android:layout_height="40dip"
                android:layout_marginLeft="5dip"
                 android:layout_gravity="center"
               
                android:src="@drawable/heartrate3" />
          
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_totalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                 android:layout_gravity="center"
                 android:layout_marginLeft="28dip" />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分钟"
                 android:layout_gravity="center"
                 android:layout_marginLeft="0dp" />
            <TextView
                android:id="@+id/tv_totalDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                 android:layout_marginLeft="40dip" />
               <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="km"
                 android:layout_gravity="center"
                 android:layout_marginLeft="0dp" />
            
            <TextView
                android:id="@+id/tv_aveSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                 android:layout_marginLeft="36dp" />
              <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="m/s"
                 android:layout_gravity="center"
                 android:layout_marginLeft="0dp" />
            
            <TextView
                android:id="@+id/tv_aveHeartRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                 android:layout_marginLeft="36dip" />
               <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="次/分"
                 android:layout_gravity="center"
                 android:layout_marginLeft="0dp" />
            

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
              <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总时间"
                 android:layout_gravity="center"
                 android:layout_marginLeft="28dip" />
                <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总路程"
                 android:layout_gravity="center"
                 android:layout_marginLeft="40dp" />
                  <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平均速度"
                 android:layout_gravity="center"
                 android:layout_marginLeft="40dp" />
                   <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平均心率"
                 android:layout_gravity="center"
                 android:layout_marginLeft="34dip" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
               <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="0dp"
                android:layout_weight="0.21"
                  android:background="@android:color/transparent"
                android:src="@drawable/line" />
               
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >
              <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffff"
                  android:layout_gravity="center"
              
                android:layout_marginLeft="25dip"
                 />
               
        </LinearLayout>
    </LinearLayout>

       <LinearLayout
           android:id="@+id/line_chart"
           android:layout_width="wrap_content"
           android:layout_height="80dp"
           android:layout_marginTop="10sp"
           android:layout_weight="0.65"
          android:background="@android:color/transparent"
           android:orientation="vertical" >

    </LinearLayout>
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
              <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当时间达10分钟以上，可查看运动模型"
                android:textColor="#ffffff"
               
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="50dp" />
               
        </LinearLayout>
       
       
       
</LinearLayout>